{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "ts-node": {
    "esm": true,  
    "experimentalSpecifierResolution": "node" 
  },
  "include": ["src/**/*"]
}
